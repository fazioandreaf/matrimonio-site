generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model RSVP {
  id                     String   @id @default(cuid())
  name                   String
  email                  String
  guests                 Int
  attending              Boolean
  message                String?
  hasDietaryRestrictions Boolean  @default(false)
  dietaryRestrictions    String?
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt

  @@map("rsvp")
}
